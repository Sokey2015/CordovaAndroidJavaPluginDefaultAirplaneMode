<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="com.acme.plugin.airplane"
    version="0.0.1">
    
    <name>Airplane</name>
    <description>A Cordova plugin that displays an airplane popup dialog</description>
    
    <engines>
        <engine name="cordova" version=">=3.6.0" />
    </engines>
    
    <js-module src="www/airplane.js" name="Airplane">
        <clobbers target="Airplane" />
    </js-module>
    
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Airplane">
                <param name="android-package" value="com.acme.plugin.airplane.Airplane" />
            </feature>
        </config-file>
        <source-file src="src/android/Airplane.java" target-dir="src/com/acme/plugin/airplane" />
    </platform>
    
    
</plugin>
